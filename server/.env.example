# Copy this file to .env and update the values with your credentials.
# PORT is optional; defaults to 4000 when omitted.
PORT=4000

# Address where contact + booking notifications should arrive.
CONTACT_TO_EMAIL=info@example.com

# SMTP configuration used by nodemailer.
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=apikey-or-username
SMTP_PASS=super-secret-password

# Optional Google Calendar configuration used to hide already booked slots
# from the /api/availability endpoint. Provide read-only credentials for a
# calendar that tracks reserved appointments.
GOOGLE_CALENDAR_ID=your-calendar-id@group.calendar.google.com
GOOGLE_CALENDAR_API_KEY=public-api-key-with-read-access
# Defaults to Europe/Budapest when omitted.
GOOGLE_CALENDAR_TIMEZONE=Europe/Budapest
